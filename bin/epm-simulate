epm_simulate()
{
    local CMD
    [ -n "$pkg_names" ] || fatal "Run $epm_cmd without packages"

    case $PMTYPE in
    	apt-rpm|apt-dpkg)
    		CMD="apt-get --simulate install"
    		;;
    	yum-rpm)
    		CMD="yum provides"
    		;;
    	urpm-rpm)
    		CMD="urpmi --test --auto"
    		;;
    	zypper-rpm)
    		CMD="zypper --non-interactive install --dry-run"
    		;;
    	*)
    		fatal "Do not known install command for $PMTYPE"
    		;;
    esac

    docmd $SUDO $CMD $pkg_names
}

