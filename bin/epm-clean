epm_clean()
{
case $PMTYPE in
	apt-rpm|apt-dpkg)
		docmd $SUDO apt-get clean
		;;
	yum-rpm)
		docmd $SUDO yum clean all
		docmd $SUDO yum makecache
		;;
	urpm-rpm)
		docmd $SUDO urpmi --clean
		;;
	zypper-rpm)
		docmd $SUDO zypper clean
		;;
	*)
		fatal "Do not known command for $PMTYPE"
		;;
esac

}
